<config>
    <modules>
        <MT_Erp>
            <version>1.0</version>
        </MT_Erp>
    </modules>

    <global>
        <blocks>
            <mterp>
                <class>MT_Erp_Block</class>
            </mterp>
        </blocks>
        <helpers>
            <mterp>
                <class>MT_Erp_Helper</class>
            </mterp>
        </helpers>
        <models>
            <mterp>
                <class>MT_Erp_Model</class>
            </mterp>
        </models>
        <events>
            <customer_register_success>
                <observers>
                    <mterp>
                        <type>singleton</type>
                        <class>mterp/observer</class>
                        <method>customerRegisterSuccess</method>
                    </mterp>
                </observers>
            </customer_register_success>
        </events>
    </global>

    <frontend>
        <routers>
            <mterp>
                <use>standard</use>
                <args>
                    <module>MT_Erp</module>
                    <frontName>mterp</frontName>
                </args>
            </mterp>
        </routers>
    </frontend>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MT_Erp before="Mage_Adminhtml">MT_Erp_Adminhtml</MT_Erp>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <MT_Erp>
                    <files>
                        <default>MT_Erp.csv</default>
                    </files>
                </MT_Erp>
            </modules>
        </translate>
    </adminhtml>

    <crontab>
        <jobs>
            <mterp_sync_all>
                <schedule><config_path>kidsplaza/erp/run_all</config_path></schedule>
                <run><model>mterp/observer::runAll</model></run>
            </mterp_sync_all>
            <mterp_sync>
                <schedule><config_path>kidsplaza/erp/schedule</config_path></schedule>
                <run><model>mterp/observer::run</model></run>
            </mterp_sync>
            <mterp_clear_log>
                <schedule><config_path>kidsplaza/erp/clear_log</config_path></schedule>
                <run><model>mterp/observer::clearLog</model></run>
            </mterp_clear_log>
        </jobs>
    </crontab>

    <default>
        <kidsplaza>
            <erp>
                <schedule>*/30 * * * *</schedule>
                <user>sa</user>
                <enable_clear_log>1</enable_clear_log>
                <clear_log>0 0 * * 0</clear_log>
                <log_days>7</log_days>
                <run_all>0 0 * * 0</run_all>
            </erp>
        </kidsplaza>
    </default>
</config>