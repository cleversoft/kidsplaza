<config>
    <modules>
        <MT_KidsPlaza>
            <version>1.1</version>
        </MT_KidsPlaza>
    </modules>

    <global>
        <helpers>
            <kidsplaza>
                <class>MT_KidsPlaza_Helper</class>
            </kidsplaza>
        </helpers>
        <blocks>
            <kidsplaza>
                <class>MT_KidsPlaza_Block</class>
            </kidsplaza>
            <core>
                <rewrite>
                    <messages>MT_KidsPlaza_Block_Core_Messages</messages>
                </rewrite>
            </core>
            <catalog>
                <rewrite>
                    <layer_filter_category>MT_KidsPlaza_Block_Catalog_Layer_Filter_Category</layer_filter_category>
                </rewrite>
            </catalog>
        </blocks>
        <resources>
            <kidsplaza>
                <setup>
                    <module>MT_KidsPlaza</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </kidsplaza>
        </resources>
        <models>
            <kidsplaza>
                <class>MT_KidsPlaza_Model</class>
            </kidsplaza>
            <directory>
                <rewrite>
                    <currency>MT_KidsPlaza_Model_Directory_Currency</currency>
                </rewrite>
            </directory>
        </models>
    </global>
</config>