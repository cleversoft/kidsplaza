<config>
    <modules>
        <MT_Review>
            <version>2.2.0</version>
        </MT_Review>
    </modules>
    <global>
        <models>
            <mtreview>
                <class>MT_Review_Model</class>
                <resourceModel>mtreview_resource</resourceModel>
            </mtreview>
            <mtreview_resource>
                <class>MT_Review_Model_Resource</class>
                <deprecatedNode>review_mysql4</deprecatedNode>
                <entities>
                    <review>
                        <table>review</table>
                    </review>
                    <review_detail>
                        <table>mt_review_detail</table>
                    </review_detail>
                    <review_helpfulness>
                        <table>mt_review_helpfulness</table>
                    </review_helpfulness>
                    <review_report>
                        <table>mt_review_report</table>
                    </review_report>
                    <review_comment>
                        <table>mt_review_comment</table>
                    </review_comment>
                    <review_status>
                        <table>review_status</table>
                    </review_status>
                    <review_entity>
                        <table>review_entity</table>
                    </review_entity>
                    <review_aggregate>
                        <table>review_entity_summary</table>
                    </review_aggregate>
                    <review_store>
                        <table>review_store</table>
                    </review_store>
                </entities>
            </mtreview_resource>
            <!--<mtreview>
                <class>MT_Review_Model</class>
                <resourceModel>review_mysql4</resourceModel>
            </mtreview>
            <mtreview_mysql4>
