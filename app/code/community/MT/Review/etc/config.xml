                    </review_aggregate>
                    <review_store>
                        <table>review_store</table>
                    </review_store>
                </entities>
            </mtreview_mysql4>-->
        </models>
        <resources>
            <mtreview_setup>
                <setup>
                    <module>MT_Review</module>
                </setup>
            </mtreview_setup>
        </resources>
        <blocks>
            <mtreview>
                <class>MT_Review_Block</class>
            </mtreview>
        </blocks>
        <helpers>
            <mtreview>
                <class>MT_Review_Helper</class>
            </mtreview>
        </helpers>
        <resources>
            <mtreview_setup>
                <setup>
                    <module>MT_Review</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mtreview_setup>
            <mtreview_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mtreview_write>
            <mtreview_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mtreview_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <mtreview>
                <use>standard</use>
                <args>
                    <module>MT_Review</module>
                    <frontName>mtreview</frontName>
                </args>
            </mtreview>
        </routers>
        <layout>
            <updates>
                <mtreview>
                    <file>mt_review.xml</file>
                </mtreview>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <mtreview>
                <use>admin</use>
                <args>
                    <module>MT_Review</module>
                    <frontName>mtreview</frontName>
                </args>
            </mtreview>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <mtreview>
                    <file>mt_review.xml</file>
                </mtreview>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <mtreview>
            <display_options>
                <show_ordering>1</show_ordering>
                <show_helpfulness>1</show_helpfulness>
                <show_reply>1</show_reply>
                <show_report>1</show_report>
                <show_allmylinks>1</show_allmylinks>
            </display_options>
            <access_options>
                <allow_only_logged>0</allow_only_logged>
                <allow_only_logged_vote>0</allow_only_logged_vote>
                <allow_only_logged_reply>0</allow_only_logged_reply>
                <allow_only_logged_report>0</allow_only_logged_report>
            </access_options>
            <ordering_options>
                <items_per_page>5,10</items_per_page>
                <default_sorter>desc</default_sorter>
                <ordering_items>created_at,rating,helpfulness</ordering_items>
            </ordering_options>
        </mtreview>
    </default>
</config>