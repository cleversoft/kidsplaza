<layout>
    <mtlocation_location_index>
        <reference name="js_bottom">
            <action method="addJs"><js>mt/location/Location.js</js></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><file>page/1column.phtml</file></action>
        </reference>
        <reference name="content">
            <block type="mtlocation/location" name="mtlocation_location"/>
        </reference>
        <reference name="before_body_end">
            <block type="page/html" template="mt/location/js.phtml"/>
        </reference>
    </mtlocation_location_index>
</layout>