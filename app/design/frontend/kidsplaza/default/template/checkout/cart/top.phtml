<div class="vr"></div>
<div class="top-cart" id="cart-top" data-title="<?php echo Mage::helper('kidsplaza')->__('Recently added item(s)')?>">
    <span class="cart-icon"></span>
    <a class="cart-content hidden-sm hidden-md hidden-xs" href="javascript:void(0)">
