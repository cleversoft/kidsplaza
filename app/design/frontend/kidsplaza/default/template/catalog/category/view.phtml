<?php
/**
 * Category view template
 *
 * @var $this Mage_Catalog_Block_Category_View
 */
?>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    if ($_imgUrl = $_category->getImageUrl()) {
        $_imgHtml = '<p class="category-image"><img src="'.$_imgUrl.'" alt="'.$this->escapeHtml($_category->getName()).'" title="'.$this->escapeHtml($_category->getName()).'" /></p>';
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
?>
<div class="category-title page-title">
    <?php if($this->IsRssCatalogEnable() && $this->IsTopCategory()): ?>
        <a href="<?php echo $this->getRssLink() ?>" class="link-rss"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
    <?php endif; ?>
    <h2><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></h2>
</div>

<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>

<?php if($_imgUrl): ?>
    <?php //echo $_imgHtml ?>
<?php endif; ?>

<?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
    <div class="category-description well well-sm">
        <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
    </div>
<?php endif; ?>

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>
<?php else: ?>
    <?php if ($_category->hasChildren()):?>
        <?php $categories = $_category->getChildrenCategories() ?>
        <?php $this->getChild('product_list')->getLoadedProductCollection()->addCountToCategories($categories)?>
        <?php foreach ($categories as $c):?>
            <?php /**@var $c Mage_Catalog_Model_Category */ ?>
            <?php echo $this->getLayout()->createBlock('mtwidget/widget')
                ->setTemplate('mt/widget/category-products.phtml')
                ->setData(array(
                    'cache' => 86400,
                    'widget_type' => 'product',
                    'category_ids' => $c->getId(),
                    'limit' => Mage::getStoreConfig('kidsplaza/catalog/limit') ? (int)Mage::getStoreConfig('kidsplaza/catalog/limit') : 10,
                    'widget_title' => $c->getName(),
                    'scroll' => 1,
                    'responsive' => 'width',
                    'responsive_width' => Mage::getStoreConfig('kidsplaza/catalog/width') ? (int)Mage::getStoreConfig('kidsplaza/catalog/width') : 165,
                    'move' => Mage::getStoreConfig('kidsplaza/catalog/move') ? (int)Mage::getStoreConfig('kidsplaza/catalog/move') : 5,
                    'href' => $c->getUrl(),
                    'product_count' => $c->getProductCount()
                ))->toHtml()?>
        <?php endforeach?>
    <?php else: ?>
        <?php echo $this->getProductListHtml() ?>
    <?php endif ?>
<?php endif; ?>
