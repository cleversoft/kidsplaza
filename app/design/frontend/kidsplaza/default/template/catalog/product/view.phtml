/**
 * Product view template
 *
 * @var $this Mage_Catalog_Block_Product_View
 * @see Mage_Review_Block_Product_View
 */
?>
<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<script type="text/javascript">
    price<?php echo $_product->getId()?> = <?php echo Mage::helper('kidsplaza')->getJsonConfig($this) ?>;
</script>
<div id="messages_product_view"><?php echo $this->getMessagesBlock()->getGroupedHtml() ?></div>
<div class="product-view" data-product="<?php echo $_product->getId()?>">
    <div class="product-essential row show-grid">
    <form action="<?php echo $this->getSubmitUrl($_product) ?>" method="post" id="product_addtocart_form"<?php if($_product->getOptions()): ?> enctype="multipart/form-data"<?php endif; ?>>
        <?php echo $this->getBlockHtml('formkey') ?>
        <input type="hidden" name="product" value="<?php echo $_product->getId() ?>" />
        <input type="hidden" name="related_product" id="related-products-field" value="" />
        <div class="product-img-box col-md-6 col-lg-6">
            <?php echo $this->getChildHtml('media') ?>
        </div>
        <div class="product-shop col-md-6 col-lg-6">
            <div class="page-title">
                <h2><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></h2>
            </div>

            <?php echo $this->getReviewsSummaryHtml($_product, false, true)?>
            <span class="separator">|</span>
            <?php echo $this->getChildHtml('addto') ?>
            <?php //echo $this->getChildHtml('productquestion_summary') ?>
            <?php echo $this->getChildHtml('alert_urls') ?>
            <?php echo $this->getChildHtml('product_type_data') ?>
            <?php echo $this->getTierPriceHtml() ?>
            <?php echo $this->getChildHtml('extrahint') ?>

            <div class="row">
                <div class="col-lg-6 desc">
                    <?php echo $_helper->productAttribute($_product, nl2br($this->stripTags($_product->getShortDescription(), '<ul><li>')), 'short_description') ?>
                    <p class="desc-more">
                        <a href="javascript:void(0)" onclick="jQuery('#product-description').scrollToMe()"><?php echo $this->__('See more') ?> &raquo;</a>
                    </p>
                </div>
                <div class="col-lg-6 right-desc">
                    <?php if (!$this->hasOptions()):?>
                        <?php echo $this->getChildHtml('addtocart') ?>
                        <?php //echo $this->getChildHtml('addto') ?>
                        <?php echo $this->getChildHtml('extra_buttons') ?>
                    <?php elseif (!$_product->isSaleable()): ?>
                        <?php //echo $this->getChildHtml('addto') ?>
                    <?php endif; ?>
                </div>
            </div>

            <?php //echo $this->getChildHtml('other');?>

            <?php if ($_product->isSaleable() && $this->hasOptions()):?>
                <?php echo $this->getChildChildHtml('container1', '', true, true) ?>
            <?php endif;?>
        </div>
        <?php if ($_product->isSaleable() && $this->hasOptions()):?>
            <?php echo $this->getChildChildHtml('container2', '', true, true) ?>
        <?php endif;?>
    </form>
    </div>
    <div id="product-related">
        <?php echo $this->getChildHtml('product_related') ?>
    </div>
    <div id="product-description">
        <h2><?php echo $this->__('Description') ?></h2>
        <?php echo $this->getChildHtml('product_description') ?>
    </div>
    <div id="product-upsell">
        <?php echo $this->getChildHtml('product_upsell') ?>
    </div>
    <div class="row product-collateral">
        <?php foreach ($this->getChildGroup('detailed_info', 'getChildHtml') as $alias => $html):?>
            <div class="box-collateral <?php echo "box-{$alias}"?>">
                <?php if ($title = $this->getChildData($alias, 'title')):?>
                <h2><?php echo $this->escapeHtml($title); ?></h2>
                <?php endif;?>
                <?php echo $html; ?>
            </div>
        <?php endforeach;?>
    </div>
    <div class="row" id="product-review">
        <?php echo $this->getChildHtml('product_additional_data') ?>
    </div>
</div>
