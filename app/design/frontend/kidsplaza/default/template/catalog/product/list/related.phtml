$size = $this->getItems()->getSize();
?>
<?php if ($size): ?>
<h2><?php echo $this->__('Frequently Bought Together') ?></h2>
<div class="">
    <ol class="">
    <?php $i=0; foreach($this->getItems() as $_item): ?>
        <li class="<?php echo $i++==0?'first':($i==$size?'last':'') ?>" style="display: inline-block">
            <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="">
                <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(135) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" />
            </a>
        </li>
    <?php endforeach ?>
    </ol>
    <ol class="">
    <?php foreach($this->getItems() as $_item): ?>
        <li class="">
            <div class="">
            <?php if(!$_item->isComposite() && $_item->isSaleable()): ?>
                <?php if (!$_item->getRequiredOptions()): ?>
                    <?php $_price = $_item->getFinalPrice() ?>
                    <?php $_priceIncTax = Mage::helper('tax')->getPrice($_item, $_price, true) ?>
                    <?php $_priceExcTax = Mage::helper('tax')->getPrice($_item, $_price) ?>
                    <input type="checkbox" class="checkbox related-checkbox" id="related-checkbox<?php echo $_item->getId() ?>" name="related_products[]" value="<?php echo $_item->getId() ?>" price="<?php echo $_price?>" price1="<?php echo $_priceIncTax?>" price2="<?php echo $_priceExcTax?>"/>
                <?php endif; ?>
            <?php endif; ?>
            <a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a>
            <?php echo Mage::helper('core')->formatPrice($_item->getFinalPrice()) ?>
            </div>
        </li>
    <?php endforeach ?>
    </ol>
</div>
<?php endif ?>
