<?php
/**
 * Product list toolbar
 *
 * @var $this Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar" role="toolbar">
    <div class="btn-group toolbar-limit">
        <a class="btn btn-default" href="javascript:void(0)">
            <?php if($this->getLastPageNum()>1): ?>
                <?php echo $this->__('%s - %s / %s', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
            <?php else: ?>
                <?php echo $this->__('%s / %s', $this->getTotalNum(), $this->getTotalNum()) ?>
            <?php endif; ?>
        </a>
        <span class="btn-group">
            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" type="button">
                <?php echo $this->__('Limit') ?>&nbsp;<?php echo $this->getLimit()?>&nbsp;<span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
            <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                <li><a href="<?php echo $this->getLimitUrl($_key) ?>"><?php echo $_limit ?></a></li>
            <?php endforeach; ?>
            </ul>
        </span>
    </div>

    <div class="btn-group toolbar-pages">
        <?php echo $this->getPagerHtml() ?>
    </div>

    <?php if( $this->isExpanded() ): ?>
        <div class="toolbar-view">
        <?php if( $this->isEnabledViewSwitcher() ): ?>
        <div class="btn-group toolbar-view-mode">
            <?php $_modes = $this->getModes(); ?>
            <?php if($_modes && count($_modes)>1): ?>
            <?php foreach ($this->getModes() as $_code=>$_label): ?>
                <?php if($this->isModeActive($_code)): ?>
                    <a title="<?php echo $this->__('View as').' '.$_label ?>" class="active btn btn-default <?php echo strtolower($_code); ?>">
                <?php else: ?>
                    <a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $this->__('View as').' '.$_label ?>" class="btn btn-default <?php echo strtolower($_code); ?>">
                <?php endif; ?>
                <?php if ($_code == 'grid'):?>
                    <i class="glyphicon glyphicon-th"></i>
                <?php else: ?>
                    <i class="glyphicon glyphicon-th-list"></i>
                <?php endif ?>
                    </a>
            <?php endforeach; ?>
            <?php endif; ?>
        </div>
        <?php endif; ?>
    
        <div class="btn-group toolbar-sort">
            <span class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <?php echo $this->__('Sort by') ?>&nbsp;<?php echo Mage::helper('catalog')->__(ucfirst($this->getCurrentOrder())) ?>&nbsp;<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                    <li>
                        <a href="<?php echo $this->getOrderUrl($_key, 'asc') ?>"><?php echo $this->__($_order) ?></a>
                    </li>
                <?php endforeach; ?>
                </ul>
            </span>
            <?php if($this->getCurrentDirection() == 'desc'): ?>
                <a class="sort-dir btn-default btn" href="<?php echo $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>">
                    <i class="glyphicon glyphicon-circle-arrow-down"></i>
                </a>
            <?php else: ?>
                <a class="sort-dir btn-default btn" href="<?php echo $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>">
                    <i class="glyphicon glyphicon-circle-arrow-up"></i>
                </a>
            <?php endif; ?>
        </div>
        </div>
    <?php endif; ?>
</div>
<?php endif ?>
