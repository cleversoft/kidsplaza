/**
 * Product list toolbar
 *
 * @var $this Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar" role="toolbar">
    <div class="toolbar-limit">
        <strong>
            <?php echo $this->__('%d items', $this->getTotalNum()) ?>
        </strong>
    </div>

    <div class="toolbar-pages">
        <?php echo $this->getPagerHtml() ?>
    </div>

    <?php if( $this->isExpanded() ): ?>
        <div class="toolbar-view">
        <div class="toolbar-sort">
            <strong><?php echo $this->__('Sort by') ?></strong>
            <div class="btn-group">
                <span class="btn-group">
                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <?php echo Mage::helper('catalog')->__(ucfirst($this->getCurrentOrder())) ?>&nbsp;<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                    <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                        <li>
                            <a href="<?php echo $this->getOrderUrl($_key, 'asc') ?>"><?php echo $this->__($_order) ?></a>
                        </li>
                    <?php endforeach; ?>
                    </ul>
                </span>
                <?php if($this->getCurrentDirection() == 'desc'): ?>
                    <a class="sort-dir btn-default btn" href="<?php echo $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>">
                        <i class="glyphicon glyphicon-circle-arrow-down"></i>
                    </a>
                <?php else: ?>
                    <a class="sort-dir btn-default btn" href="<?php echo $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>">
                        <i class="glyphicon glyphicon-circle-arrow-up"></i>
                    </a>
                <?php endif; ?>
            </div>
        </div>
        </div>
    <?php endif; ?>
</div>
<?php endif ?>
