/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php $_product = $this->getProduct() ?>
<?php $_helper = $this->helper('catalog/output') ?>
<?php $_imgHelper = $this->helper('catalog/image') ?>

<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image">
    <img class="img-responsive img-main img-zoom"
        src="<?php echo $_imgHelper->init($_product, 'image')->resize(430)?>"
        data-large="<?php echo $_imgHelper->init($_product, 'image')?>"/>
</p>
<?php else: ?>
<p class="product-image">
    <img src="<?php echo $_imgHelper->init($_product, 'image')->resize(430) ?>"
        alt="<?php echo $this->htmlEscape($this->getImageLabel()) ?>"
        title="<?php echo $this->htmlEscape($this->getImageLabel()) ?>"/>
</p>
<?php endif; ?>

<div class="more-views" id="moreViews">
    <ul class="slides">
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <li>
            <a href="javascript:void(0)" title="<?php echo $this->htmlEscape($_image->getLabel())?>">
                <img width="85" height="85"
                    data-small="<?php echo $_imgHelper->init($_product, 'image', $_image->getFile())->resize(430)?>"
                    data-large="<?php echo $_image->getUrl()?>"
                    src="<?php echo $_imgHelper->init($_product, 'image', $_image->getFile())->resize(84)?>"
                    alt="<?php echo $this->htmlEscape($_image->getLabel())?>" />
            </a>
        </li>
    <?php endforeach; ?>
    </ul>
    <a class="more-views-prev more-views-nav" href="javascript:void(0)">
        <i class="glyphicon glyphicon-chevron-left"></i>
    </a>
    <a class="more-views-next more-views-nav" href="javascript:void(0)">
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
</div>

<script type="text/javascript">
    moreViewOptions = {};
    moreViewOptions.count = 3;
    moreViewOptions.itemMargin = 1;
</script>