/**
 * Category layered navigation state
 *
 * @see Mage_Catalog_Block_Layer_State
 */
?>
<?php $_filters = $this->getActiveFilters() ?>
<?php if(!empty($_filters)): ?>
    <div class="panel-heading">
        <h3><?php echo $this->__('Currently Shopping by:') ?></h3>
    </div>
    <div class="panel-body">
        <ol>
        <?php foreach ($_filters as $_filter): ?>
            <li class="state-item">
                <span class="state-item-name"><?php echo $this->__($_filter->getName()) ?></span>
                <span class="label label-info"><?php echo $this->stripTags($_filter->getLabel()) ?></span>
                <a class="filter-remove" href="<?php echo $_filter->getRemoveUrl() ?>" title="<?php echo $this->__('Remove This Item') ?>">
                    <i class="glyphicon glyphicon-remove"></i>
                </a>
            </li>
        <?php endforeach; ?>
        </ol>
    </div>
<?php endif; ?>
