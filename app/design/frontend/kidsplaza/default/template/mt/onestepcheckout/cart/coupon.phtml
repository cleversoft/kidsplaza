<form id="discount-coupon-form" action="<?php echo $this->getUrl('mtonestepcheckout/cart/couponPost') ?>" method="post" class="form-solo">
    <input type="hidden" name="remove" id="remove-coupone" value="0" />
    <div class="discount">
        <h3><?php echo $this->__('Discount Codes') ?></h3>
        <span><?php echo $this->__('Enter your coupon code if you have one.') ?></span>
        <div class="input-group">
            <input autocomplete="off" class="input-sm form-control required-entry" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>" />
            <div class="input-group-btn">
                <button type="button" title="<?php echo $this->__('Apply Coupon') ?>" class="btn btn-kid" id="coupon-submit" value="<?php echo $this->__('Apply Coupon') ?>">
                    <i class="glyphicon glyphicon-ok"></i>
                </button>
                <?php if(strlen($this->getCouponCode())): ?>
                    <button type="button" title="<?php echo $this->__('Cancel Coupon') ?>" class="btn btn-kid" id="coupon-cancel" value="<?php echo $this->__('Cancel Coupon') ?>">
                        <i class="glyphicon glyphicon-remove"></i>
                    </button>
                <?php endif;?>
                <span id="coupon-loading" style="display: none"><img src="<?php echo Mage::getBaseUrl('skin')?>adminhtml/default/default/images/process_spinner.gif"></span>
            </div>
        </div>
    </div>
</form>
